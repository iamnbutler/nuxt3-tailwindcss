{
	/* Volar */
	"editor.defaultFormatter": "esbenp.prettier-vscode", // Enables Volar formatter (recommended).
	"volar.takeOverMode.enabled": true, // Enables Volar Take Over mode, make sure native TypeScript support is disabled!
	"volar.icon.splitEditors": false,
	"volar.codeLens.pugTools": false,
	"volar.completion.preferredTagNameCase": "pascal",
	"volar.completion.preferredAttrNameCase": "camel",
	"volar.codeLens.references": false,
	"volar.completion.autoImportComponent": false, // We don't need to import components due to Nuxt auto-import system.
	/* Prettier */
	"prettier.semi": true,
	"prettier.tabWidth": 2,
	"prettier.useTabs": true,
	"prettier.printWidth": 130,
	"prettier.arrowParens": "always",
	"prettier.jsxBracketSameLine": true,
	/* Recommended editor settings */
	"editor.formatOnSave": true,
	"editor.tabSize": 2,
	"editor.linkedEditing": true,
	"html.autoClosingTags": true,
	"css.lint.unknownAtRules": "ignore", // Code won't complain about "@apply" anymore
	"less.lint.unknownAtRules": "ignore", // **
	"scss.lint.unknownAtRules": "ignore" // **
}
